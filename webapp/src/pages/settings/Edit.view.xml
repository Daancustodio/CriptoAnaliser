<mvc:View
	controllerName="CriptAnaliser.src.pages.settings.Edit"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page
	id="settingsPage"
	navButtonPress="onNavBack"
	showNavButton="true"
	title="{i18n>Commom.Settings}">
        <content>
            <VBox>
                <l:Grid defaultSpan="L12 M12 S12">
                    <l:content>
                        <l:HorizontalLayout
										allowWrapping="true">
                            <GenericTile
                    					headerImage="sap-icon://globe"
										press="_onNavRouter"
										header="{i18n>Commom.Language}"
										app:router="languages"
										subheader="{i18n>Commom.LanguageSub}"
										scope="Display"
										class="sapUiTinyMargin"></GenericTile>
                        </l:HorizontalLayout>
                    </l:content>
                </l:Grid>
            </VBox>
        </content>
    </Page>
</mvc:View>
