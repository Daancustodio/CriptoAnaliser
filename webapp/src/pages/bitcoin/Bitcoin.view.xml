<mvc:View
	controllerName="CriptAnaliser.src.pages.bitcoin.Bitcoin"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:custom="CriptAnaliser.controls"
    xmlns:invCharts="CriptAnaliser.controls.invCharts"
    xmlns:l="sap.ui.layout"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:f="sap.f"
    xmlns:micro="sap.suite.ui.microchart"
	height="100%">
    <Page 
		showNavButton="true" 
		title="{i18n>Commom.Bitcoin}" 
		navButtonPress="onNavBack">
        <headerContent>
        </headerContent>
        <content>
            <f:GridList
					id="gridList"
					headerText="BTC - Ultimos 7 dias"
					items="{path:'LastDays>/', sorter:'coin'}">
                <f:customLayout>
                    <grid:GridBoxLayout boxMinWidth="10rem"/>
                </f:customLayout>
                <CustomListItem>
                    <VBox height="100%">
                        <VBox class="sapUiSmallMargin">
                            <layoutData>
                                <FlexItemData growFactor="1" shrinkFactor="0" />
                            </layoutData>
                            <custom:MinMax minima="{LastDays>lowest}" maxima="{LastDays>highest}" day="{LastDays>date}" coin="{LastDays>coin}"/>
                        </VBox>
                    </VBox>
                </CustomListItem>
            </f:GridList>
            <f:GridList>
                <f:customLayout>
                    <grid:GridBoxLayout boxMaxWidth="50%"/>
                </f:customLayout>
                <CustomListItem>
                    <VBox class="sapUiSmallMargin" width="95%" >
                        <Title text="Linhas" />
                        <invCharts:MultiLineChart chartType="line" id="multiLineChart" height="350px"  />
                    </VBox>
                </CustomListItem>
                <CustomListItem>
                    <VBox  class="sapUiSmallMargin" width="95%" >
                        <Title text="Barras" />
                        <invCharts:MultiLineChart chartType="bar" id="multiLineChartBar" height="350px"  />
                    </VBox>
                </CustomListItem>
            </f:GridList>
        </content>
    </Page>
</mvc:View>
